<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name ="android:fontFamily">@font/junge</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">#fff</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/appColor</item>
        <item name="android:fontFamily">@font/junge</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyTextStyle2" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/appColor</item>
        <item name="android:fontFamily">@font/junge</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:backgroundTint">@color/appColor</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">#5F71D6</item>
    </style>

    <style name="PositiveButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/junge</item>
        <item name="rippleColor">#5F71D6</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:backgroundTint">@color/appColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">#5F71D6</item>
    </style>

    <style name="NegativeButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/junge</item>
        <item name="rippleColor">#5F71D6</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>

    </style>

    <style name="ComputationAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle2</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>

    </style>

    <style name="AppTheme.LighterEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/appColor</item>
        <item name="colorControlNormal">@color/appColor</item>
    </style>

    <style name="AlertDialogTheme2" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/rounded_button_dialog</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle2</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle2</item>
        <item name="android:editTextBackground">@style/AppTheme.LighterEditText</item>

    </style>

</resources>
