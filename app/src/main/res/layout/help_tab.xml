<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/help_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:id="@+id/ask_gpa_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_toolbar"
        android:text="@string/ask_gpa"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/junge"
        android:textStyle="bold"
        android:textColor="#9DAE5D" />

    <Spinner
        android:id="@+id/gpa_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ask_gpa_textView"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpa_spinner"
        android:text="@string/ask_for_courses"
        android:textAlignment="center"
        android:background="@drawable/rounded_button_coloured"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/junge"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite" />


    <EditText
        android:id="@+id/total_courses"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_background"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:hint="Number of courses"
        android:inputType="number"
        android:textColor="#BAC0C1" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_continue_button"
        android:text="Continue"
        android:padding="10dp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>